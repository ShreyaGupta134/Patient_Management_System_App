<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e57373"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="ID"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/textView6" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/patient_ID"
                android:hint="Enter Id" />

            <TextView
        android:text="Enter your Prescription"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/textView9" />

    <EditText
        android:layout_width="397dp"
        android:layout_height="120dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLength="30"
        android:id="@+id/notes"
        android:hint="enter prescription" />

    <TextView
        android:text="Enter your Diagnosis details"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/textView10" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLength="30"
        android:id="@+id/Diagnosis_history"
        android:hint="enter Diagnosis" />

    <TextView
        android:text="ENter Notes"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/textView11" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLength="30"
        android:id="@+id/pre_med"
        android:hint="Enter note...." />

            <Button
                android:text="SAVE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/save_details"
                android:onClick="OnClickSaveDetails"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>